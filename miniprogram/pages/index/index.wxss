/**
*商品列表
**/
.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list{
  margin-top:10px;
}
 
.list .list_item{
  margin-top:20rpx;
  padding:20rpx;
  height:200rpx;
  border-bottom:1px solid #E8E8E8;
}
.list .list_item .img{
  float:left;
  width:30%;
  height:100%;
  overflow: hidden;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:69%;
  float:right;
  height:200rpx;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:20rpx;
  font-size: 30rpx;
}
 
.list .list_item .info .price{
  color:#FF2727;
  margin-left:20rpx;
  margin-top:20rpx;
  font-size:30rpx;
}
 
.list .list_item .info .num{
  position: absolute;
  left:0px;
  bottom:20rpx;
  color:#747474;
  margin-left:20rpx;
  font-size:30rpx;
}
#title{
  font-family: Arial, Helvetica, sans-serif;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}